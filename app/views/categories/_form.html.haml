= form_for @category do |f|
  - if @category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@category.errors.count, "error")} prohibited this category from being saved:"
      %ul
        - @category.errors.full_messages.each do |msg|
          %li= msg

  .panel.panel-default
    .panel-heading
      %b Category Name:
      = f.text_field :name
    .panel-body
      %b Description:
      = f.text_field :description
  .actions
    = f.submit 'Save'
