
.panel.panel-default
  .panel-heading
    %b Category Name:
    = @category.name
  .panel-body
    %b Description:
    = @category.description

%br
%h2 Products:
%table.table.table-striped
  - if @products.empty?
    %h3 No product to Display
  -else
    -@products.each_with_index do |product,index|
      %tr
        %td
          = index+1
        %td
          = link_to product.name, category_product_path(:id => product.id, :category_id => params[:id])
        %td
          = link_to "Delete", category_product_path(:id => product.id, :category_id => params[:id]), :method => "delete"
          %br
%h3
  = link_to 'Click here to add New Product', new_category_product_path(@category)
