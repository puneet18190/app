= form_for @product, url: {action: "create", controller: "products"} do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .panel.panel-default
    .panel-heading
      %b 
        = f.label :name
      = f.text_field :name
    .panel-body
      %b 
        = f.label :description
      = f.text_field :description
  .actions
    = f.submit 'Save'
